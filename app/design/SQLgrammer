CREATE TABLE members (
    id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(50),
    age INT,
    address VARCHAR(50),
    email VARCHAR(100),
    tellphone VARCHAR(11),
    password VARCHAR(100),
    created TIMESTAMP,
    deleted TIMESTAMP,
    modified TIMESTAMP
);

CREATE TABLE posts (
    id INT AUTO_INCREMENT PRIMARY KEY, 
    message TEXT,
    member_id INT,
    reply_message_id INT,
    created DATETIME,
    deleted DATETIME,
    modified TIMESTAMP
);